{{ form_start(form, { attr: { class: 'row g-3 justify-content-center' } }) }}
    <div class="row g-3 justify-content-center">    
        <div class="col-auto">
            {{ form_label(form.url) }}
            {{ form_widget(form.url) }}
            <div class="text-danger small">
                {{ form_errors(form.url) }}
            </div>
        </div>

        <div class="col-auto">
            {{ form_label(form.timeToLive) }}
            {{ form_widget(form.timeToLive) }}
            <div class="text-danger small">
                {{ form_errors(form.timeToLive) }}
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col d-flex justify-content-center">
            {{ form_widget(form.submit) }}
        </div>
    </div>
{{ form_end(form) }}